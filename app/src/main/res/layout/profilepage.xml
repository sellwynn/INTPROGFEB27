<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/topImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/top_bg" />
    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/profile_picture"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"
        android:padding="4dp" />

    <!-- Name -->
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marshall D. Teach"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="8dp" />

    <!-- Role -->
    <TextView
        android:id="@+id/profile_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commuter"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="16dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="blackbeardPirateKing@gmail.com"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:autoLink="email"
        android:layout_marginBottom="8dp" />

    <!-- Location -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/locationicon"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/profile_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cebu, Philippines"
            android:textSize="14sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Phone -->

    <!-- Edit Profile Button -->
    <TextView
        android:id="@+id/profile_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="+63-929-555-4642"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/edit_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT PROFILE"
        android:padding="12dp"
        android:textAllCaps="true"
        android:backgroundTint="@color/dblue"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <!-- Spacer to push navbar to bottom -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <!-- Navbar Background Image (Full Width & Stuck to Bottom) -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:src="@drawable/navbar"
            android:scaleType="fitXY"
            android:adjustViewBounds="true" />

        <!-- Icons Positioned Over Navbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="0dp"
            android:layout_margin="0dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:src="@drawable/home_icon" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="34dp"
                android:layout_height="33dp"
                android:src="@drawable/developer_icon"
                android:layout_marginLeft="50dp"/>

            <ImageView
                android:id="@+id/imageVie10"
                android:layout_width="26dp"
                android:layout_height="match_parent"
                android:src="@drawable/settings_icon"
                android:layout_marginLeft="130dp"/>

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/profile_icon"
                android:layout_marginLeft="60dp"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
